<%- include('partials/_headers') %>

<div class="container">
    <h2>Registrar Propiedad</h2>
    <form action="/addProperty" method="post">
        <div class="form-group">
            <label for="type">Tipo de Propiedad</label>
            <input type="text" class="form-control" id="type" name="type" required>
        </div>
        <div class="form-group">
            <label for="address">Dirección</label>
            <input type="text" class="form-control" id="address" name="address" required>
        </div>
        <div class="form-group">
            <label for="city">Ciudad</label>
            <input type="text" class="form-control" id="city" name="city" required>
        </div>
        <div class="form-group">
            <label for="country">País</label>
            <input type="text" class="form-control" id="country" name="country" required>
        </div>
        <div class="form-group">
            <label for="description">Descripción</label>
            <textarea class="form-control" id="description" name="description" required></textarea>
        </div>
        <div class="form-group">
            <label for="estimatedPrice">Precio Estimado</label>
            <input type="number" class="form-control" id="estimatedPrice" name="estimatedPrice" required>
        </div>
        <div class="form-group">
            <label for="ownerType">Tipo de Propietario</label>
            <select class="form-control" id="ownerType" name="ownerType" required>
                <option value="User">Usuario</option>
                <option value="Famous">Famoso</option>
            </select>
        </div>
        <div class="form-group">
            <label for="ownerId">Propietario</label>
            <select class="form-control" id="ownerId" name="ownerId" required>
                <optgroup label="Usuarios">
                    <% users.forEach(user => { %>
                        <option value="<%= user._id %>"><%= user.username %></option>
                    <% }) %>
                </optgroup>
                <optgroup label="Famosos">
                    <% famous.forEach(famous => { %>
                        <option value="<%= famous._id %>"><%= famous.name %></option>
                    <% }) %>
                </optgroup>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Registrar Propiedad</button>
    </form>
</div>

<%- include('partials/_footer') %>
