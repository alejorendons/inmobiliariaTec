<%- include('partials/_headers') %>

<div class="container my-5">
    <h1 class="text-center mb-4">Dashboard</h1>
    
    <h2>Propiedades</h2>
    <% if (properties.length > 0) { %>
        <% properties.forEach(property => { %>
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title"><%= property.type %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Ubicación:</strong> <%= property.location.address %>, <%= property.location.city %>, <%= property.location.country %></p>
                    <p class="card-text"><strong>Descripción:</strong> <%= property.description %></p>
                    <p class="card-text"><strong>Precio Estimado:</strong> $<%= property.estimatedPrice %></p>
                    <% if (property.owner) { %>
                        <p class="card-text"><strong>Propietario:</strong> <%= property.owner.name %></p>
                    <% } else { %>
                        <p class="card-text text-danger"><strong>Propietario:</strong> No disponible</p>
                    <% } %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No hay propiedades registradas.
        </div>
    <% } %>

    <h2 class="mt-5">Transacciones</h2>
    <% if (transactions.length > 0) { %>
        <% transactions.forEach(transaction => { %>
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title"><%= transaction.type %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Propiedad:</strong> <%= transaction.property.location.address %>, <%= transaction.property.location.city %>, <%= transaction.property.location.country %></p>
                    <p class="card-text"><strong>Comprador:</strong> <%= transaction.buyer.username %></p>
                    <p class="card-text"><strong>Vendedor:</strong> <%= transaction.seller.username %></p>
                    <% if (transaction.bankId) { %>
                        <p class="card-text"><strong>Banco:</strong> <%= transaction.bankId.name %></p>
                    <% } else { %>
                        <p class="card-text text-danger"><strong>Banco:</strong> No disponible</p>
                    <% } %>
                    <p class="card-text"><strong>Comisión:</strong> $<%= transaction.commission %></p>
                    <p class="card-text"><strong>Impuestos:</strong> $<%= transaction.taxes %></p>
                    <p class="card-text"><strong>Multa:</strong> $<%= transaction.fines %></p>
                    <p class="card-text"><strong>Total:</strong> $<%= transaction.salePrice %></p>
                    <p class="card-text"><strong>Moneda:</strong> <%= transaction.currency %></p>
                    <p class="card-text"><strong>Fecha:</strong> <%= transaction.date.toLocaleDateString() %></p>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No hay transacciones registradas.
        </div>
    <% } %>

    <h2 class="mt-5">Famosos</h2>
    <% if (famousList.length > 0) { %>
        <% famousList.forEach(famous => { %>
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title"><%= famous.name %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Nacionalidad:</strong> <%= famous.nationality %></p>
                    <p class="card-text"><strong>Fecha de Nacimiento:</strong> <%= famous.birthDate ? famous.birthDate.toLocaleDateString() : 'N/A' %></p>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No hay famosos registrados.
        </div>
    <% } %>
</div>

<%- include('partials/_footer') %>

